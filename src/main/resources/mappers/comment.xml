<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.sboard.mapper.CommentMapper">
    <insert id="insert">
        INSERT INTO SB_COMMENT
            (ANO, CONTENT, WRITER, REG_IP, WDATE)
        VALUES
            (#{ano}, #{content}, #{writer}, #{reg_ip}, SYSDATE)
    </insert>

    <select id="selectAll" resultType="kr.co.sboard.dto.CommentDTO">
        SELECT * FROM SB_COMMENT WHERE ANO=#{ano}
    </select>

    <select id="select" resultType="kr.co.sboard.dto.CommentDTO">
        SELECT * FROM SB_COMMENT WHERE CNO=#{cno}
    </select>

    <update id="update">
        UPDATE SB_COMMENT SET
            CONTENT=#{content}
        WHERE
            CNO=#{cno}
    </update>

    <delete id="delete">
        DELETE FROM SB_COMMENT WHERE CNO=#{cno}
    </delete>

</mapper>